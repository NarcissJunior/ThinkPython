import turtle
import math

def square(turtou, length):
    """Draws a simple square based on length"""
    for i in range(500):
        plus = i * 20
        distance = length + plus
        degree = 90

        turtou.fd(distance)
        turtou.lt(degree)


def polygon(turtou, n, length):
    """Draws a polygon based on length and with n sides"""
    angle = 360.0 / n
    polyline(turtou, n, length, angle)


def circle(turtou, r):
    """Draws a circle square based on radius"""
    arc(turtou, r, 360)

def polyline(t, n, length, angle):
    """Draws n segments of a line based on its length
     and the angle (degree) between them. t is Turtle instance.
    """
    for i in range(n):
        t.fd(length)
        t.lt(angle)

def movePointer(turtou, distance):
    turtou.pu()
    turtou.fd(distance)
    turtou.pd()


turtou = turtle.Turtle()

numberPetals = 7
radius = 70
angle = 60
movePointer(turtou, -100)
polygon(turtou, numberPetals, radius, angle)


numberPetals = 10
radius = 40
angle = 80
movePointer(turtou, 150)
polygon(turtou, numberPetals, radius, angle)


numberPetals = 20
radius = 140
angle = 20
movePointer(turtou, 150)
polygon(turtou, numberPetals, radius, angle)

#circle(turtou, radius)
#polygon(turtou, length = 50, polygonsize = 5)
#square(turtou, length = 50)
#polyline(turtou, 150, 150, 150)

turtou.hideturtle()
turtle.mainloop()

